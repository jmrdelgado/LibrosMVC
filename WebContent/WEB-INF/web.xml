<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
    <display-name>LibreriaMVC</display-name>
    <welcome-file-list>
        <welcome-file>controlusers.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>es.studium.LibreriaMVC.ServletControlador</servlet-class>
    </servlet>
    <servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>es.studium.LibreriaMVC.LoginServlet</servlet-class>
	</servlet>
    <servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>es.studium.LibreriaMVC.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PanelDashboard</servlet-name>
		<servlet-class>es.studium.LibreriaMVC.DashBoardControlador</servlet-class>
	</servlet>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>